<%= link_to program_lesson_path(@program.name, lesson.number), class: "lesson-row" do %>
<div><%= lesson.number %></div>
<div><%= lesson.date.strftime("%a, %b %d, %Y ") %></div>
<div><%= lesson.name %></div>
<div <%= color_of(lesson.avg_rating) %>><%= lesson.avg_rating || 'N/A' %></div>
<div><%= lesson.instructor.name %></div>
<% end %>
