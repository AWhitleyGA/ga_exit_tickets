<main>
  <% if @program.errors.full_messages.any? %>
    <div>
      <% @program.errors.full_messages.each do |error_message| %>
        <p><%= error_message %></p>
      <% end %>
    </div>
  <% end %>
  <%= form_for @program do |f| %>
    <%= f.label :name, "Program Name" %>
    <%= f.text_field :name %>

    <%= f.label :location, "Program Location" %>
    <%= f.text_field :location %>

    <%= f.label :active, "Status" %>
    <%= f.select :active, options_for_select([["Active", true], ["Inactive", false]], @program.active?) %>

    <%= f.submit "Update Program" %>
  <% end %>
  <%= form_for @program, method: :delete, data: { confirm: "Are you sure?" } do |f| %>
    <%= f.submit "Delete Program" %>
  <% end %>
</main>
