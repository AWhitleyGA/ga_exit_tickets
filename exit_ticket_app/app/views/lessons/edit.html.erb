<main>
  <% if @lesson.errors.full_messages.any? %>
    <div>
      <% @lesson.errors.full_messages.each do |error_message| %>
        <p><%= error_message %></p>
      <% end %>
    </div>
  <% end %>
  <%= form_for [@program, @lesson] do |f| %>
    <%= f.label "Lesson Number" %>
    <%= f.number_field :number %>

    <%= f.label "Lesson Name" %>
    <%= f.text_field :name %>

    <%= f.label "Lesson Date" %>
    <%= f.date_field :date %>

    <%= f.label "Lesson Start Time" %>
    <%= f.time_field :start_time %>

    <%= f.label "Lesson End Time" %>
    <%= f.time_field :end_time %>

    <%= f.label "Instructor" %>
    <%= f.collection_select :user_id, @instructors, :id, :name %>
    <br />
    <%= f.submit "Update Lesson" %>
  <% end %>
  <%= form_for [@program, @lesson], method: :delete, data: { confirm: 'Are you sure?' } do |f| %>
    <%= f.submit "Delete Lesson" %>
  <% end %>
</main>
